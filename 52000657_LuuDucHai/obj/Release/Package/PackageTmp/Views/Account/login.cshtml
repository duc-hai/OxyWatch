
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="shortcut icon" href="~/Uploads/images/favicon.png?v=90"
          type="image/png" />
    <script src="https://kit.fontawesome.com/7cff00f1d7.js" crossorigin="anonymous"></script>
    <title>Đăng nhập</title>

    <style>
        body {
            /* background: linear-gradient(to right, #1192dd, #b18f8f); */
            background-color: cadetblue;
        }

        .app-wrapp {
            display: flex;
            height: 100vh;
            width: 100vw;
            align-items: center;
            justify-content: center;
        }

        .img-logo {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .form-wrap {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        #form-login {
            background-color: #fff;
            border-radius: 5px;
            width: 100%;
            margin: 0 150px 0 20px;
            padding: 20px 20px 30px 20px;
            border: 1px solid antiquewhite;
        }

        .sign-up {
            text-decoration: none;
        }

        .no-account {
            margin-left: 20px;
        }

        .just-center {
            display: flex;
            align-items: center;
        }

        .bold-600 {
            font-weight: 600;
        }

        .btn-login {
            padding: 8px 20px;
        }

        .third-party-login {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .btn-third {
            margin: 0px 10px;
        }
    </style>
</head>

<body>
    <div class="app-wrapp">
        <div class="img-logo col-md-5">
            <img src="~/Uploads/images/logo-removebg-preview.png" alt="Logo" width="300px">

        </div>
        <div class="form-wrap col-md-7">
            <form method="post" id="form-login">
                <h4 class="text-center">Đăng nhập</h4>
                @{
                    var usName = "";
                    var pwd = "";
                    if (TempData["username"] != null)
                    {
                        usName = TempData["username"].ToString();
                    }
                    if (TempData["password"] != null)
                    {
                        pwd = TempData["password"].ToString();
                    }
                }
                <div class="form-group mt-3">
                    <label for="username" class="bold-600">Tên đăng nhập</label>
                    <input type="text" value="@usName" name="username" id="username" class="form-control mt-2" placeholder="Nhập tên đăng nhập" required>
                </div>

                <div class="form-group mt-3">
                    <label for="password" class="bold-600">Mật khẩu</label>
                    <input type="password" value="@pwd" name="password" id="password" class="form-control mt-2" placeholder="Nhập mật khẩu" required>
                </div>
                @{
                    if (TempData["error"] != null)
                    {
                        <div class="col-12" style="margin-top: 12px">
                            <div class="alert alert-danger" role="alert" style="margin:0">
                                @TempData["error"].ToString()
                            </div>
                        </div>
                    }
                }
                <div class="form-group mt-3 just-center">
                    <input type="submit" value="Đăng nhập" class="btn btn-success btn-login">
                    <span class="no-account">
                        Chưa có tài khoản ? <a href="dang-ky" class="sign-up">Đăng ký ngay</a>
                    </span>
                </div>
                <hr>
                <p class="text-center">Hoặc</p>
                <div class="third-party-login">
                    <a href="~/account/loginFacebook" class="btn btn-third btn-primary">
                        Login with facebook
                        <i class="fa-brands fa-facebook"></i>
                    </a>

                    <a class="btn btn-third btn-danger" onclick="alert('Nào rảnh thì code')">
                        Login with facebook
                        <i class="fa-brands fa-google"></i>
                    </a>
                </div>
            </form>
        </div>
    </div>
</body>

</html>