@{
    ViewBag.Title = "Danh mục";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}
<section id="content" class="clearfix container">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="main-content">          
                <div class="product-list clearfix">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <aside class="styled_header  use_icon ">
                                <h3>@Model.name</h3>
                                <span class="icon"><img src="~/Uploads/images/icon_featured.png?v=90" alt=""></span>
                            </aside>
                        </div>
                    </div>
                   
                    <div class="row content-product-list products-resize">
                        @Html.Action("getProductByCate", "Product", new {id = Model.id, metaTitle = Model.meta});
                    </div>

                    <div class="row">
                        <div class="col-lg-12 col-sm-12 col-xs-12  pull-center center">
                            <a class="btn btn-readmore" href="/collections/dong-ho-chong-nuoc" role="button">Xem thêm</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

