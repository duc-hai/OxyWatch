            zoom: 19, //Mức độ zoom
            center: position, //Lấy vị trí trung tâm là vị trí của shop
            mapId: "Map_ID",
        });

        const marker = new google.maps.Marker({ //Điểm đánh dấu
            map: map, 
            position: position,
            title: "@Model.shopname",
        })
        marker.setMap(map);
    }
    initMap();

