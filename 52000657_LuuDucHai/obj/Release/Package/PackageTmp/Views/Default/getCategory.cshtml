@model IEnumerable<_52000657_LuuDucHai.Models.category>

@if (Model.Count() == 0) //Nếu Model.Count == 0 thì nghĩa là menu này không có category
{
    return;
}
else
{
    <ul class="dropdown-menu" role="menu">
    @foreach (var i in Model)
    {
        <li>
            <a href="/@ViewBag.meta/@i.meta" title="@i.name">
                @i.name
            </a>
        </li>
     }
    </ul>
}

