@model IEnumerable<_52000657_LuuDucHai.Models.news>

@{
    ViewBag.Title = "Bài viết";
    Layout = "~/Areas/admin/Views/Shared/_MyLayout.cshtml";
}

@section _Header {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <link href="https://cdn.datatables.net/v/dt/dt-1.13.4/datatables.min.css" rel="stylesheet" />
    <script src="https://cdn.datatables.net/v/dt/dt-1.13.4/datatables.min.js"></script>
}

<style>
    .card {
        border: 1px solid var(--bs-link-hover-color);
    }

    .header-card {
        margin-bottom: 10px;
        background-color: var(--bs-link-hover-color);
        padding: 10px 18px;
        border-radius: 5px 5px 0px 0px;
        border: 1px solid #ccc;
    }

    .header-title {
        margin: 0;
        color: #fff;
    }

    .center {
        text-align: center;
    }

    .no-center {
        text-align: left;
    }

    th {
        border-top: 1px solid #ccc;
        text-align: center !important;
    }

    th, td {
        border-right: 1px solid #ccc;
        border-left: 1px solid #ccc;
    }

    td {
        line-height: 175%;
    }

    #data-table_length {
        margin-bottom: 17px;
    }

    .dataTables_info,
    #data-table_paginate {
        margin-top: 6px;
    }

    .btn-add {
        background-color: tomato;
        color: #fff;
    }

        .btn-add:hover {
            background-color: tomato;
            opacity: 0.7;
            color: #fff;
        }

    .align-right {
        text-align: right;
    }
</style>

<main id="main" class="main">
    <section class="section dashboard">
        <div class="row">
            <div>
                <div class="card">
                    <div class="header-card">
                        <h4 class="header-title">Quản lý bài viết</h4>
                    </div>
                    <div class="card-body">
                        <p class="align-right">
                            <a href="@Url.Action("Create", "news")" class="btn btn-add">
                                Thêm mới
                                <i class="bi bi-plus-circle-fill"></i>
                            </a>
                            @*@Html.ActionLink("Create New", "Create")*@
                        </p>
                        <table class="table table-striped" id="data-table">
                            <thead>
                                <tr>
                                    <th>
                                        STT
                                    </th>
                                    <th>
                                        Tiêu đề
                                    </th>
                                    <th>
                                        Hình ảnh
                                    </th>
                                    <th>
                                        Trạng thái
                                    </th>
                                    <th>
                                        Thứ tự
                                    </th>
                                    <th>
                                        Ngày cập nhật
                                    </th>
                                    <th>
                                        Thao tác
                                    </th>
                                </tr>
                            </thead>

                            <tbody>
                                @{ var number = 1;}
                                @foreach (var item in Model)
                                {
                                    <tr class="center">
                                        <td>
                                            @Html.Raw(number++)
                                        </td>
                                        <td class="no-center">
                                            @Html.DisplayFor(modelItem => item.name)
                                        </td>
                                        <td>
                                            <img src="~/Content/uploads/imgs/news/@item.image" width="50px" />
                                            @*@Html.DisplayFor(modelItem => item.image)*@

                                        </td>
                                        <td>
                                            @(item.hide.GetValueOrDefault(false) ? "Hiển thị" : "Ẩn")
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.order)
                                        </td>
                                        <td>
                                            @(item.datebegin.HasValue ? item.datebegin.Value.ToString("dd/MM/yyyy") : "")
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Edit", "news", new {id = item.id })" class="btn btn-success">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            <a href="@Url.Action("Details", "news", new { id = item.id })" class="btn btn-secondary">
                                                <i class="bi bi-info-circle-fill" style="color: #fff"></i>
                                            </a>

                                            <a href="@Url.Action("Delete", "news", new { id = item.id })" class="btn btn-danger">
                                                <i class="bi bi-trash3-fill"></i>
                                            </a>
                                            @*
                                                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                                                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                                                @Html.ActionLink("Delete", "Delete", new { id = item.id })
                                            *@

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

@section _Footer {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#data-table').DataTable({
                responsive: true
            });
        })
    </script>
}

