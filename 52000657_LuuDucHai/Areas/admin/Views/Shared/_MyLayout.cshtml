            Designed by <a href="https://bootstrapmade.com/">BootstrapMade</a>
        </div>
    </footer><!-- End Footer -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="~/Areas/admin/Vendor/apexcharts/apexcharts.min.js"></script>
    <script src="~/Areas/admin/Vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Areas/admin/Vendor/chart.js/chart.umd.js"></script>
    <script src="~/Areas/admin/Vendor/echarts/echarts.min.js"></script>
    <script src="~/Areas/admin/Vendor/quill/quill.min.js"></script>
    <script src="~/Areas/admin/Vendor/simple-datatables/simple-datatables.js"></script>
    <script src="~/Areas/admin/Vendor/tinymce/tinymce.min.js"></script>
    <script src="~/Areas/admin/Vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/Areas/admin/Scripts/main.js"></script>
    @RenderSection("_Header", false)
    @RenderSection("_Footer", false)
</body>

</html>