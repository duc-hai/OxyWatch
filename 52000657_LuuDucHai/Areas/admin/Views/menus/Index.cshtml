@model IEnumerable<_52000657_LuuDucHai.Models.menu>

@{
    ViewBag.Title = "Menu";
    Layout = "~/Areas/admin/Views/Shared/_MyLayout.cshtml";
}

@section _Header {
    @*<link rel="stylesheet" type="text/css" href="https://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.0/css/jquery.dataTables.css">
    <link rel="stylesheet" type="text/css" href="https://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.0/css/jquery.dataTables_themeroller.css">
    <script type="text/javascript" charset="utf8" src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.7.1.min.js"></script>
    <script type="text/javascript" charset="utf8" src="https://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.0/jquery.dataTables.min.js"></script>*@

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <link href="https://cdn.datatables.net/v/dt/dt-1.13.4/datatables.min.css" rel="stylesheet" />
    <script src="https://cdn.datatables.net/v/dt/dt-1.13.4/datatables.min.js"></script>
}

<style>
    .card {
        border: 1px solid var(--bs-link-hover-color);
    }

    .header-card {
        margin-bottom: 10px;
        background-color: var(--bs-link-hover-color);
        padding: 10px 18px;
        border-radius: 5px 5px 0px 0px;
        border: 1px solid #ccc;
    }

    .header-title {
        margin: 0;
        color: #fff;
    }

    .center {
        text-align: center;
    }

    .no-center {
        text-align: left;
    }

    /*th, td {
        border: 1px solid #ccc;
    }*/

    th {
        border-top: 1px solid #ccc;
        text-align: center !important;
    }

    th, td {
        border-right: 1px solid #ccc;
        border-left: 1px solid #ccc;
    }

    td {
        line-height: 175%;
    }

    #data-table_length {
        margin-bottom: 17px;
    }

    .dataTables_info,
    #data-table_paginate {
        margin-top: 6px;
    }

    .btn-add {
        background-color: tomato;
        color: #fff;
    }

    .btn-add:hover {
        background-color: tomato;
        opacity: 0.7;
        color: #fff;
    }

    .align-right {
        text-align: right;
    }
</style>

<main id="main" class="main">
    <section class="section dashboard">
        <div class="row">
            <div>
                <div class="card">
                    <div class="header-card">
                        <h4 class="header-title">Quản lý menu</h4>
                    </div>
                    <div class="card-body">
                        <p class="align-right">
                            <a href="@Url.Action("Create", "menus")" class="btn btn-add">
                                Thêm mới
                                <i class="bi bi-plus-circle-fill"></i>
                            </a>
                            @*@Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary" })*@
                        </p>
                        <table class="table table-striped" id="data-table">
                            <thead>
                                <tr class="center">
                                    <th>
                                        STT
                                    </th>
                                    <th>
                                        Tên menu
                                    </th>
                                    <th>
                                        Link
                                    </th>
                                    <th>
                                        Meta
                                    </th>
                                    <th>
                                        Trạng thái
                                    </th>
                                    <th>
                                        Thứ tự
                                    </th>
                                    <th>
                                        Ngày cập nhật
                                    </th>
                                    <th>
                                        Thao tác
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ var number = 1;}
                                @foreach (var item in Model)
                                {
                                    <tr class="center">
                                        <td>
                                            @Html.Raw(number++)
                                        </td>
                                        <td class="no-center">
                                            @Html.DisplayFor(modelItem => item.mname)
                                        </td>
                                        <td class="no-center">
                                            @Html.DisplayFor(modelItem => item.link)
                                        </td>
                                        <td class="no-center">
                                            @Html.DisplayFor(modelItem => item.meta)
                                        </td>
                                        <td>
                                            @(item.hide.GetValueOrDefault(false) ? "Hiển thị" : "Ẩn")
                                            @*@Html.DisplayFor(modelItem => item.hide)*@
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.arrange)
                                        </td>
                                        <td>
                                            @(item.datebegin.HasValue ? item.datebegin.Value.ToString("dd/MM/yyyy") : "")
                                            @*@Html.DisplayFor(modelItem => item.datebegin)*@
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Edit", "menus", new {id = item.id })" class="btn btn-success">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            <a href="@Url.Action("Details", "menus", new { id = item.id })" class="btn btn-secondary">
                                                <i class="bi bi-info-circle-fill" style="color: #fff"></i>
                                            </a>

                                            <a href="@Url.Action("Delete", "menus", new { id = item.id })" class="btn btn-danger">
                                                <i class="bi bi-trash3-fill"></i>
                                            </a>
                                            @*@Html.ActionLink("Sửa", "Edit", new { id = item.id }) |
                                            @Html.ActionLink("Chi tiết", "Details", new { id = item.id }) |
                                            @Html.ActionLink("Xóa", "Delete", new { id = item.id })*@
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

@section _Footer {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#data-table').DataTable({
                responsive: true
            });
        })
    </script>
}

